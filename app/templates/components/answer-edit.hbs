{{#if inEdit}}
  <div class="ui form">
    <button class="mini ui button green right floated" {{action "updateAnswer" answer}}>{{fa-icon "pencil-square-o"}}</button>
    <button class="mini ui button red right floated" {{action "toggleEdit"}}>{{fa-icon "ban"}}</button>
    <br><br>
    <label>Confession</label>
    {{input value=answer.answer id="answer"}}

    <label>Let It All Out</label>
    {{textarea value=answer.further id="further"}}
  </div>
  <br>
{{else}}
  <button class="mini ui button yellow right floated" {{action "toggleEdit"}}>{{fa-icon "pencil-square-o"}}</button>
  <button class="mini ui button red right floated" {{action "deleteAnswer" answer}}>{{fa-icon "trash-o"}}</button>
  <br>
{{/if}}
